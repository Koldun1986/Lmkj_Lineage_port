From 813752ab3e0cd42ecae7271fdf08fc4b91d76d86 Mon Sep 17 00:00:00 2001
From: vgdn1942 <vgdn1942@gmail.com>
Date: Sun, 29 Oct 2017 19:00:11 +0300
Subject: [PATCH] Revert mkbootimg: support MTK boot.img format

Change-Id: I7944f7f6d37d465ad0727a0bb4932b779dd88925
---
 mkbootimg/bootimg.h       |  2 --
 mkbootimg/mkbootimg.c     | 54 +++++++----------------------------------------
 mkbootimg/unpackbootimg.c | 47 +++++++++++------------------------------
 3 files changed, 20 insertions(+), 83 deletions(-)

diff --git a/mkbootimg/bootimg.h b/mkbootimg/bootimg.h
index b348bf7..e66e269 100644
--- a/mkbootimg/bootimg.h
+++ b/mkbootimg/bootimg.h
@@ -28,8 +28,6 @@ typedef struct boot_img_hdr boot_img_hdr;
 #define BOOT_ARGS_SIZE 512
 #define BOOT_EXTRA_ARGS_SIZE 1024
 
-#define MTK_HEADER_SIZE 512
-
 struct boot_img_hdr
 {
     uint8_t magic[BOOT_MAGIC_SIZE];
diff --git a/mkbootimg/mkbootimg.c b/mkbootimg/mkbootimg.c
index 97ff3d7..ec7c61f 100644
--- a/mkbootimg/mkbootimg.c
+++ b/mkbootimg/mkbootimg.c
@@ -26,12 +26,10 @@
 #include "mincrypt/sha.h"
 #include "bootimg.h"
 
-static void *load_file(const char *fn, unsigned *_sz, int is_mtk, const char *mtk_fn)
+static void *load_file(const char *fn, unsigned *_sz)
 {
     char *data;
-    char *buf_start;
     int sz;
-    int buf_sz;
     int fd;
 
     data = 0;
@@ -43,36 +41,13 @@ static void *load_file(const char *fn, unsigned *_sz, int is_mtk, const char *mt
 
     if(lseek(fd, 0, SEEK_SET) != 0) goto oops;
 
-    buf_sz = sz + (is_mtk ? MTK_HEADER_SIZE : 0);
-    data = buf_start = (char*) malloc(buf_sz);
+    data = (char*) malloc(sz);
     if(data == 0) goto oops;
 
-    if (is_mtk) {
-        /* MTK magic */
-        data[0] = 0x88;
-        data[1] = 0x16;
-        data[2] = 0x88;
-        data[3] = 0x58;
-
-        /* file length in little endian */
-        data[4] = sz & 0xFF;
-        data[5] = (sz >> 8) & 0xFF;
-        data[6] = (sz >> 16) & 0xFF;
-        data[7] = (sz >> 24) & 0xFF;
-
-        /* MTK "file name" */
-        strncpy(data + 8, mtk_fn, 32);
-
-        /* MTK header padding */
-        memset(data + 40, 0xff, MTK_HEADER_SIZE - 40);
-
-        buf_start += MTK_HEADER_SIZE;
-    }
-
-    if(read(fd, buf_start, sz) != sz) goto oops;
+    if(read(fd, data, sz) != sz) goto oops;
     close(fd);
 
-    if(_sz) *_sz = buf_sz;
+    if(_sz) *_sz = sz;
     return data;
 
 oops:
@@ -96,7 +71,6 @@ int usage(void)
             "       [ --second_offset <address> ]\n"
             "       [ --tags_offset <address> ]\n"
             "       [ --id ]\n"
-            "       [ --mtk <boot|recovery> ]\n"
             "       -o|--output <filename>\n"
             );
     return 1;
@@ -137,8 +111,6 @@ int main(int argc, char **argv)
 {
     boot_img_hdr hdr;
 
-    int is_mtk = 0;
-    int is_mtk_boot = 0;
     char *kernel_fn = NULL;
     void *kernel_data = NULL;
     char *ramdisk_fn = NULL;
@@ -210,16 +182,6 @@ int main(int argc, char **argv)
                 }
             } else if(!strcmp(arg, "--dt")) {
                 dt_fn = val;
-            } else if (!strcmp(arg, "--mtk")) {
-                if (!strcmp(val, "boot")) {
-                    is_mtk = 1;
-                    is_mtk_boot = 1;
-                } else if (!strcmp(val, "recovery")) {
-                    is_mtk = 1;
-                    is_mtk_boot = 0;
-                } else {
-                    return usage();
-                }
             } else {
                 return usage();
             }
@@ -267,7 +229,7 @@ int main(int argc, char **argv)
         strncpy((char *)hdr.extra_cmdline, cmdline, BOOT_EXTRA_ARGS_SIZE);
     }
 
-    kernel_data = load_file(kernel_fn, &hdr.kernel_size, is_mtk, "KERNEL");
+    kernel_data = load_file(kernel_fn, &hdr.kernel_size);
     if(kernel_data == 0) {
         fprintf(stderr,"error: could not load kernel '%s'\n", kernel_fn);
         return 1;
@@ -277,7 +239,7 @@ int main(int argc, char **argv)
         ramdisk_data = 0;
         hdr.ramdisk_size = 0;
     } else {
-        ramdisk_data = load_file(ramdisk_fn, &hdr.ramdisk_size, is_mtk, is_mtk_boot ? "ROOTFS" : "RECOVERY");
+        ramdisk_data = load_file(ramdisk_fn, &hdr.ramdisk_size);
         if(ramdisk_data == 0) {
             fprintf(stderr,"error: could not load ramdisk '%s'\n", ramdisk_fn);
             return 1;
@@ -285,7 +247,7 @@ int main(int argc, char **argv)
     }
 
     if(second_fn) {
-        second_data = load_file(second_fn, &hdr.second_size, is_mtk, "");
+        second_data = load_file(second_fn, &hdr.second_size);
         if(second_data == 0) {
             fprintf(stderr,"error: could not load secondstage '%s'\n", second_fn);
             return 1;
@@ -293,7 +255,7 @@ int main(int argc, char **argv)
     }
 
     if(dt_fn) {
-        dt_data = load_file(dt_fn, &hdr.dt_size, is_mtk, "");
+        dt_data = load_file(dt_fn, &hdr.dt_size);
         if (dt_data == 0) {
             fprintf(stderr,"error: could not load device tree image '%s'\n", dt_fn);
             return 1;
diff --git a/mkbootimg/unpackbootimg.c b/mkbootimg/unpackbootimg.c
index d844cfd..3d2fda7 100644
--- a/mkbootimg/unpackbootimg.c
+++ b/mkbootimg/unpackbootimg.c
@@ -38,21 +38,11 @@ void write_string_to_file(char* file, char* string)
     fclose(f);
 }
 
-void maybe_skip_mtk_header(FILE* f, int is_mtk)
-{
-    if (!is_mtk) {
-        return;
-    }
-
-    fseek(f, MTK_HEADER_SIZE, SEEK_CUR);
-}
-
 int usage() {
     printf("usage: unpackbootimg\n");
     printf("\t-i|--input boot.img\n");
     printf("\t[ -o|--output output_directory]\n");
     printf("\t[ -p|--pagesize <size-in-hexadecimal> ]\n");
-    printf("\t[ --mtk 1 ]\n");
     return 0;
 }
 
@@ -62,7 +52,6 @@ int main(int argc, char** argv)
     char* directory = "./";
     char* filename = NULL;
     int pagesize = 0;
-    int is_mtk = 0;
 
     argc--;
     argv++;
@@ -77,12 +66,6 @@ int main(int argc, char** argv)
             directory = val;
         } else if(!strcmp(arg, "--pagesize") || !strcmp(arg, "-p")) {
             pagesize = strtoul(val, 0, 16);
-        } else if (!strcmp(arg, "--mtk")) {
-            if (!strcmp(val, "1")) {
-                is_mtk = 1;
-            }
-
-            return usage();
         } else {
             return usage();
         }
@@ -170,27 +153,23 @@ int main(int argc, char** argv)
     //printf("total read: %d\n", total_read);
     total_read += read_padding(f, sizeof(header), pagesize);
 
-    int mtk_size_adjust = is_mtk ? -MTK_HEADER_SIZE : 0;
-
     sprintf(tmp, "%s/%s", directory, basename(filename));
     strcat(tmp, "-zImage");
     FILE *k = fopen(tmp, "wb");
-    byte* kernel = (byte*)malloc(header.kernel_size + mtk_size_adjust);
+    byte* kernel = (byte*)malloc(header.kernel_size);
     //printf("Reading kernel...\n");
-    maybe_skip_mtk_header(f, is_mtk);
-    fread(kernel, header.kernel_size + mtk_size_adjust, 1, f);
+    fread(kernel, header.kernel_size, 1, f);
     total_read += header.kernel_size;
-    fwrite(kernel, header.kernel_size + mtk_size_adjust, 1, k);
+    fwrite(kernel, header.kernel_size, 1, k);
     fclose(k);
 
     //printf("total read: %d\n", header.kernel_size);
     total_read += read_padding(f, header.kernel_size, pagesize);
 
 
-    byte* ramdisk = (byte*)malloc(header.ramdisk_size + mtk_size_adjust);
+    byte* ramdisk = (byte*)malloc(header.ramdisk_size);
     //printf("Reading ramdisk...\n");
-    maybe_skip_mtk_header(f, is_mtk);
-    fread(ramdisk, header.ramdisk_size + mtk_size_adjust, 1, f);
+    fread(ramdisk, header.ramdisk_size, 1, f);
     total_read += header.ramdisk_size;
     sprintf(tmp, "%s/%s", directory, basename(filename));
     if(ramdisk[0] == 0x02 && ramdisk[1]== 0x21)
@@ -198,7 +177,7 @@ int main(int argc, char** argv)
     else
         strcat(tmp, "-ramdisk.gz");
     FILE *r = fopen(tmp, "wb");
-    fwrite(ramdisk, header.ramdisk_size + mtk_size_adjust, 1, r);
+    fwrite(ramdisk, header.ramdisk_size, 1, r);
     fclose(r);
 
     total_read += read_padding(f, header.ramdisk_size, pagesize);
@@ -206,12 +185,11 @@ int main(int argc, char** argv)
     sprintf(tmp, "%s/%s", directory, basename(filename));
     strcat(tmp, "-second");
     FILE *s = fopen(tmp, "wb");
-    byte* second = (byte*)malloc(header.second_size + mtk_size_adjust);
+    byte* second = (byte*)malloc(header.second_size);
     //printf("Reading second...\n");
-    maybe_skip_mtk_header(f, is_mtk);
-    fread(second, header.second_size + mtk_size_adjust, 1, f);
+    fread(second, header.second_size, 1, f);
     total_read += header.second_size;
-    fwrite(second, header.second_size + mtk_size_adjust, 1, r);
+    fwrite(second, header.second_size, 1, r);
     fclose(s);
 
     total_read += read_padding(f, header.second_size, pagesize);
@@ -219,12 +197,11 @@ int main(int argc, char** argv)
     sprintf(tmp, "%s/%s", directory, basename(filename));
     strcat(tmp, "-dt");
     FILE *d = fopen(tmp, "wb");
-    byte* dt = (byte*)malloc(header.dt_size + mtk_size_adjust);
+    byte* dt = (byte*)malloc(header.dt_size);
     //printf("Reading dt...\n");
-    maybe_skip_mtk_header(f, is_mtk);
-    fread(dt, header.dt_size + mtk_size_adjust, 1, f);
+    fread(dt, header.dt_size, 1, f);
     total_read += header.dt_size;
-    fwrite(dt, header.dt_size + mtk_size_adjust, 1, r);
+    fwrite(dt, header.dt_size, 1, r);
     fclose(d);
     
     fclose(f);
